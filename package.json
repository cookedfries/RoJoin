{
  "name": "rojoin",
  "version": "1.0.0",
  "description": "RoJoin - Roblox server joiner desktop application",
  "main": "dist/main/index.js",
  "author": "RoJoin",
  "license": "MIT",
  "scripts": {
    "dev": "tsc && electron .",
    "build": "tsc && electron-builder",
    "dist": "tsc && electron-builder --win",
    "start": "electron .",
    "compile": "tsc"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.rojoin.app",
    "productName": "RoJoin",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "src/preload/**/*"
    ],
    "extraResources": [],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "signAndEditExecutable": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "RoJoin-Setup.exe",
      "shortcutName": "RoJoin",
      "runAfterFinish": true,
      "uninstallDisplayName": "RoJoin",
      "deleteAppDataOnUninstall": false
    }
  }
}
